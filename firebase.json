{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "flutter": {
    "platforms": {
      "android": {
        "default": {
          "projectId": "gatherup-g4ther",
          "appId": "1:824376832954:android:6b888c961f021cc44f2383",
          "fileOutput": "android/app/google-services.json"
        }
      }
    }
  },
  "firestore": {
    "indexes": [
      {
        "collectionGroup": "lobbies",
        "queryScope": "COLLECTION",
        "fields": [
          { "fieldPath": "lastActivity", "order": "DESCENDING" },
          { "fieldPath": "status", "order": "ASCENDING" }
        ]
      },
      {
        "collectionGroup": "users",
        "queryScope": "COLLECTION",
        "fields": [
          { "fieldPath": "lastActive", "order": "DESCENDING" },
          { "fieldPath": "status", "order": "ASCENDING" }
        ]
      },
      {
        "collectionGroup": "reconnect",
        "queryScope": "COLLECTION",
        "fields": [
          { "fieldPath": "lobbyId", "order": "ASCENDING" },
          { "fieldPath": "timestamp", "order": "DESCENDING" }
        ]
      }
    ]
  }
}